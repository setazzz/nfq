{% extends 'base.html.twig' %}

{% block body %}

    {% if orders %}
        <table>
            <thead>
            <tr>
                <td>No.</td>
                <td>Name</td>
                <td>City</td>
                <td>Area</td>
            </tr>
            </thead>

            <tbody>
                {% for order in orders %}
                    <tr>
                        <td>{{ order.id }}</td>
                        <td>{{ order.clientName }}</td>
                        <td>{{ order.clientCity }}</td>
                        <td>{{ order.width * order.height }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No orders.</p>
    {% endif %}

{% endblock %}